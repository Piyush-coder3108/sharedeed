  <script>
    function deleteCode(roomid){
      var domain=window.location.href.split('user')[0];
      const link=domain+'editor/'+roomid+'/delete';
      fetch(link)
      .then(response => response.json())
      .then(data=>{
        if(data.success){
          window.location.replace(domain);
        }
        else{
          new Noty({
              theme: 'relax',
              text: "Server error try again later",
              type: 'error',
              layout: 'topRight',
              timeout: 1500
            }).show();
        }
      })
    }

  </script>

